{% endblock %}

{% block body %}
        <div class="main">
            <div class="container">
                <div class="row">
                    <div class="tabbable span12">
                                <div class="title">
                                    <h3>Liste des locations de <u>{{utilisateur}}</u></h3>
                                </div><!-- end title -->
                                <table id="tableUser" class="table table-striped table-bordered table-condensed">
